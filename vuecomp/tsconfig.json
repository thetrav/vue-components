{
    "compilerOptions": {
        "target": "es5",
        "module": "es2015",
        // this enables stricter inference for data properties on `this`
        "strict": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noImplicitReturns": true,
        "moduleResolution": "node"
    },
    "include": [
        "src/**/*.vue",
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}